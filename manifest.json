{
  "manifest_version": 3,
  "name": "Access Assist",
  "version": "0.2",
  "description": "Voice + summarisation accessibility assistant",

  "action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>",
    "http://localhost:3000/*"
  ],

  "background": {
    "service_worker": "background.js"
  }
}
