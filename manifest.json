{
  "manifest_version": 3,
  "name": "Accessible Mode Toggle",
  "version": "1.0",
  "description": "Toggle high-contrast readable mode on any website.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Accessible Mode"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
